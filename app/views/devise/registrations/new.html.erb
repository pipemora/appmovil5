<section class="overlay">
<div class="container">


<div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
<div class="row center">
<h1>Reg√≠strate</h1>

</div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>



<div class="row center">
<div class="form-group">
<label for="exampleInputEmail1">Email address</label>
<%= f.email_field :email, autofocus: true, class: "form-control", id: "exampleInputEmail1" %>

</div>
</div>

<div class="row center">
<div class="form-group">
<label for="exampleInputEmail1">Password</label>
<% if @validatable %>
<em>(<%= @minimum_password_length %> characters minimum)</em>
<% end %><br />
<%= f.password_field :password, autocomplete: "off", class: "form-control", id: "exampleInputEmail1" %>


</div>
</div>

<div class="row center">
<div class="form-group">
<label for="exampleInputEmail1">Password Confirmation</label>
<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", id: "exampleInputEmail1" %>
</div>
</div>

<div class="row center">

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
</div>
<% end %>


